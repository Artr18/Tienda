<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <div class="position-absolute top-0 end-0 p-3">
        <a href="/logout" class="btn btn-danger">Cerrar Sesión</a>
    </div>
    <title>Lista y Modificar Bebidas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        
        .container {
            max-width: 1200px;
            margin-top: 50px;
        }
        
        h1 {
            color: #007bff;
        }
        
        .table th,
        .table td {
            vertical-align: middle;
        }
        
        .table-container {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }
        
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f1f1f1;
        }
        
        .btn-info,
        .btn-warning,
        .btn-danger {
            font-size: 0.9rem;
            padding: 8px 16px;
            border-radius: 5px;
        }
        
        .btn-info {
            background-color: #17a2b8;
        }
        
        .btn-warning {
            background-color: #ffc107;
        }
        
        .btn-danger {
            background-color: #dc3545;
        }
        
        .btn-info:hover {
            background-color: #138496;
        }
        
        .btn-warning:hover {
            background-color: #e0a800;
        }
        
        .btn-danger:hover {
            background-color: #c82333;
        }
        
        .btn-success {
            font-size: 1rem;
            padding: 10px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <!-- Cabecera del sitio -->
    <h1 class="mt-5">Bienvenido a la Administración</h1>

    <div class="mt-4">
        <!-- Botón para Clientes -->
        <a href="/clientes" class="btn btn-primary btn-lg mr-3">Clientes</a>

        <!-- Botón para Tiendas -->
        <a href="/tiendas" class="btn btn-secondary btn-lg">Tiendas</a>
    </div>
    <div class="container">
        <h1 class="mb-4 text-center">Lista de Bebidas</h1>

        <!-- Agregar nueva bebida -->
        <a href="/bebidas/nuevo" class="btn btn-success d-block mx-auto mb-3">Añadir Nueva Bebida</a>

        <div class="table-container">
            <!-- Tabla de bebidas -->
            <table class="table table-striped table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% bebidas.forEach(bebida => { %>
                        <tr>
                            <td>
                                <%= bebida.codigo %>
                            </td>
                            <td>
                                <%= bebida.nombre %>
                            </td>
                            <td>
                                <!-- Ver detalles -->
                                <a href="/bebidas/detalle/<%= bebida._id %>" class="btn btn-info btn-sm">Detalles</a>
                                <!-- Editar -->
                                <a href="/bebidas/edit/<%= bebida._id %>" class="btn btn-warning btn-sm">Editar</a>
                                <!-- Eliminar -->
                                <form action="/bebidas/<%= bebida._id %>?_method=DELETE" method="POST" class="d-inline-block" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta bebida?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"></script>
</body>

</html>